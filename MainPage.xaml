<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LocalAIRecorder.MainPage"
             Title="Local AI Recorder">

    <Grid RowDefinitions="Auto,*,Auto" Padding="20" RowSpacing="20">
        <VerticalStackLayout Grid.Row="0" Spacing="10">
            <Label Text="Recordings" FontSize="Subtitle" FontAttributes="Bold"/>
            <Button x:Name="DownloadModelsButton" 
                    Text="Download AI Models" 
                    Clicked="OnDownloadModelsClicked"
                    IsVisible="False"/>
            <Label x:Name="StatusLabel" Text="Ready" TextColor="Gray"/>
            <ProgressBar x:Name="DownloadProgress" IsVisible="False"/>
        </VerticalStackLayout>

        <CollectionView Grid.Row="1" x:Name="RecordingsCollectionView" SelectionMode="Single" SelectionChanged="OnRecordingSelected">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame Padding="10" Margin="0,5">
                        <Label Text="{Binding .}" />
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <Grid Grid.Row="2" ColumnDefinitions="*,Auto" ColumnSpacing="10">
            <Button 
                Grid.Column="0"
                x:Name="RecordButton" 
                Text="Start Recording" 
                Clicked="OnRecordClicked"
                HeightRequest="60"
                CornerRadius="30"
                BackgroundColor="Red"
                TextColor="White"
                FontAttributes="Bold"/>

            <ActivityIndicator
                Grid.Column="1"
                x:Name="RecordingIndicator"
                IsVisible="False"
                IsRunning="False"
                VerticalOptions="Center"
                HorizontalOptions="End" />
        </Grid>
    </Grid>

</ContentPage>
