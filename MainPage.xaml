<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:LocalAIRecorder.Models"
             xmlns:vm="clr-namespace:LocalAIRecorder.ViewModels"
             x:Class="LocalAIRecorder.MainPage"
             x:DataType="vm:MainViewModel"
             Title="Local AI Recorder">

    <Grid RowDefinitions="Auto,*,Auto" Padding="20" RowSpacing="20">
        <VerticalStackLayout Grid.Row="0" Spacing="10">
            <Label Text="Recordings" FontSize="Subtitle" FontAttributes="Bold" />
            <Button Text="Download AI Models"
                    Command="{Binding DownloadModelsCommand}"
                    IsVisible="False" />
            <Label Text="{Binding StatusText}" TextColor="Gray" />
        </VerticalStackLayout>

        <CollectionView Grid.Row="1"
                        ItemsSource="{Binding Recordings}"
                        SelectionMode="Single"
                        SelectionChangedCommand="{Binding SelectRecordingCommand}"
                        SelectionChangedCommandParameter="{Binding Source={RelativeSource Self}, Path=SelectedItem}">
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="local:Recording">
                    <SwipeView>
                        <SwipeView.RightItems>
                            <SwipeItems>
                                <SwipeItem Text="Delete"
                                           BackgroundColor="Red"
                                           Command="{Binding Source={RelativeSource AncestorType={x:Type vm:MainViewModel}}, Path=DeleteRecordingCommand}"
                                           CommandParameter="{Binding .}" />
                            </SwipeItems>
                        </SwipeView.RightItems>
                        <Frame Padding="10" Margin="0,5">
                            <Grid ColumnDefinitions="*,Auto">
                                <VerticalStackLayout>
                                    <Label Text="{Binding Filename}" FontAttributes="Bold" />
                                    <Grid ColumnDefinitions="Auto,Auto">
                                        <Label Text="{Binding CreatedAt, StringFormat='{0:g}'}" FontSize="12" TextColor="Gray" />
                                        <Label Text="{Binding DurationSeconds, StringFormat=' • {0:F1}s'}" Grid.Column="1" FontSize="12" TextColor="Gray" />
                                    </Grid>
                                </VerticalStackLayout>
                            </Grid>
                        </Frame>
                    </SwipeView>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <Grid Grid.Row="2" ColumnDefinitions="*,Auto" ColumnSpacing="10">
            <Button
                Grid.Column="0"
                Text="{Binding RecordButtonText}"
                Command="{Binding ToggleRecordingCommand}"
                HeightRequest="60"
                CornerRadius="30"
                BackgroundColor="{Binding RecordButtonColor}"
                TextColor="White"
                FontAttributes="Bold" />

            <ActivityIndicator
                Grid.Column="1"
                IsVisible="{Binding IsBusy}"
                IsRunning="{Binding IsBusy}"
                VerticalOptions="Center"
                HorizontalOptions="End" />
        </Grid>
    </Grid>
</ContentPage>